<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.RegisterActivity"
    >

    <include
        android:id="@+id/toolbar_register"
        layout="@layout/toolbar_customized"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/userId"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:layout_marginTop="250dp"
        android:drawableLeft="@drawable/ic_action_username"
        android:ems="10"
        android:hint="user id"
        android:inputType="text"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/Nickname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/userId"
        android:layout_alignStart="@+id/userId"
        android:layout_alignLeft="@+id/userId"
        android:layout_marginTop="38dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_username"
        android:ems="10"
        android:textSize="22dp"
        android:hint="Username"
        android:inputType="text" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Nickname"
        android:layout_alignStart="@+id/Nickname"
        android:layout_alignLeft="@+id/Nickname"
        android:layout_marginTop="38dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:textSize="22dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#CC6672"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="REGISTER"
                android:textColor="@color/colorLightBlue"
                android:background="@color/colorLightRed"
                android:textSize="18sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Nickname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="206dp"
        android:text="Rigister  here"
        android:textSize="18sp" />




</RelativeLayout>