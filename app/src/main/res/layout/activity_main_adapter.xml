<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_swipe_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentView="@+id/view_content"
    app:rightMenuView="@+id/view_right"
    >


    <RelativeLayout
        android:id="@+id/view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="13dp">

        <ImageView
            android:id="@+id/image_notebook"
            android:layout_width="69dp"
            android:layout_height="56dp"
            android:src="@drawable/notes"
            android:scaleX="0.6"
            android:scaleY="0.6"/>

        <TextView
            android:id="@+id/notebook_title"
            android:layout_width="156dp"
            android:layout_height="58dp"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/view_notelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:textSize="15dp"/>
        </LinearLayout>


    </RelativeLayout>



    <LinearLayout
        android:id="@+id/view_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:padding="37dp"
            android:text="@string/main_more" />

        <TextView
            android:id="@+id/text_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:padding="37dp"
            android:text="@string/main_delete" />
    </LinearLayout>
</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>